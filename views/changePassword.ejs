<html lang="en">
<head>
  <title>New Password</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="/css/bootstrap.min.css">
  <link rel="stylesheet" href="/css/style.css">
  <link rel="stylesheet" href="/style.scss">
  <script src="/js/jquery.js"></script>
  <script src="/js/bootstrap.min.js"></script>
  <script  src="/js/index.js"></script>
  <script>
      function checkForm(form)
      {
        
        if(form.password.value !== form.password1.value)
        {
          alert("Password Confirmation Error");
          return false
        }
        if(form.password.value.length < 8 || form.password.value.length >15)
        {
          alert("Password Length Should be in between 8 - 15");
          return false
        }
        var re = /^[\w ]+$/;
  
  // validation fails if the input doesn't match our regular expression
  if(re.test(form.password.value))
   {
    alert("Password Must Have Some Special Character other than alphabets and Numbers");
    form.password.focus();
    return false;
  }
  return true
  
      }
    
    </script>
</head>
<body>
  <div class="container">
      <h3><a href="/">Bharat Auth</a></h3>
    <div class="form">
      
<div id="login">
          <h1>New Password</h1>

          <form action="/profile/show/changePass" method="post" onsubmit="return checkForm(this);">
            <div class="form-group">
                <input type="password" class="form-control" id="pwd0" name="oldpassword" placeholder="Enter Old Password">
                </div>
            <div class="form-group">
                <input type="password" class="form-control" id="pwd" name="password" placeholder="Enter New Password">
                </div>
                <div class="form-group">
                    <input type="password" class="form-control" id="pwd1" name="password1" placeholder="Enter New Password Again">
                    </div>

          <div align="center">
            <button type="submit" class="btn btn-primary btn-block"><b>SUBMIT</b></button>
          </div>

          </form>

        </div>
        </div>
        </div>
</html>
